{
  "designSystem": {
    "colors": {
      "background": "#FFFFFF",
      "textPrimary": "#202124",
      "textSecondary": "#5F6368",
      "accentGreen": "#34A853",
      "accentBlue": "#4285F4",
      "accentRed": "#EA4335",
      "accentYellow": "#FBBC05",
      "divider": "#E0E0E0",
      "iconGray": "#9AA0A6"
    },
    "fonts": {
      "family": "'Helvetica Neue', Arial, sans-serif",
      "sizes": {
        "title": 28,
        "sectionTitle": 18,
        "taskText": 16,
        "timeText": 14
      },
      "weights": {
        "regular": 400,
        "medium": 500,
        "bold": 700
      }
    },
    "layout": {
      "pagePadding": 24,
      "sectionSpacing": 16,
      "taskSpacing": 20,
      "iconSpacing": 8
    },
    "components": {
      "page": {
        "backgroundColor": "{colors.background}",
        "padding": "{layout.pagePadding}"
      },
      "header": {
        "title": {
          "fontSize": "{fonts.sizes.title}",
          "fontWeight": "{fonts.weights.bold}",
          "color": "{colors.textPrimary}"
        },
        "icon": {
          "size": 20,
          "color": "{colors.iconGray}",
          "alignment": "right"
        }
      },
      "sectionTitle": {
        "fontSize": "{fonts.sizes.sectionTitle}",
        "fontWeight": "{fonts.weights.medium}",
        "color": "{colors.textPrimary}",
        "marginBottom": 8
      },
      "taskItem": {
        "container": {
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "paddingVertical": 8,
          "borderBottom": "1px solid {colors.divider}"
        },
        "checkbox": {
          "size": 20,
          "border": "2px solid {colors.iconGray}",
          "borderRadius": "50%"
        },
        "text": {
          "fontSize": "{fonts.sizes.taskText}",
          "color": "{colors.textPrimary}"
        },
        "time": {
          "fontSize": "{fonts.sizes.timeText}",
          "color": "{colors.accentGreen}",
          "icon": {
            "size": 14,
            "color": "{colors.accentGreen}"
          }
        },
        "tag": {
          "fontSize": "{fonts.sizes.timeText}",
          "color": {
            "Fitness": "{colors.accentRed}",
            "Appointments": "{colors.accentBlue}",
            "Groceries": "{colors.accentYellow}"
          }
        },
        "emoji": {
          "size": 16
        }
      },
      "addTaskButton": {
        "text": {
          "fontSize": "{fonts.sizes.taskText}",
          "color": "{colors.accentRed}"
        },
        "icon": {
          "size": 16,
          "color": "{colors.accentRed}"
        }
      }
    }
  }
}
